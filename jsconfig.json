{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"declaration": true,
		"declarationMap": true,
		"maxNodeModuleJsDepth": 0,
		"module": "commonjs",
		"resolveJsonModule": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"target": "es2022",
		"useUnknownInCatchVariables": true
	},
	"exclude": [
		"coverage",
		"node_modules",
		"**/*.test.js"
	],
	"include": [
		"**/*.js"
	]
}
